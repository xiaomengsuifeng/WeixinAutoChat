<?xml version="1.0" encoding="UTF-8"?>
<configuration status="OFF">
	<appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%highlight{[%d] [%t] [%-5level] [%logger{1}]- %msg %n}{FATAL=red, ERROR=magenta, WARN=yellow, INFO=white, DEBUG=green, TRACE=blue}" />
		</Console>
		<RollingFile name="RollingFile" fileName="WeixinAutoChat.log"
             filePattern="log/$${date:yyyy-MM}/%d{MM-dd-yyyy}-%i.log.gz">
        <PatternLayout pattern="%highlight{[%d] [%t] [%-5level] [%logger{1}]- %msg %n}{FATAL=red, ERROR=magenta, WARN=yellow, INFO=white, DEBUG=green, TRACE=blue}"/>
        <Policies>  
        <TimeBasedTriggeringPolicy modulate="true" interval="1"/>  
    	</Policies>
    </RollingFile>
	</appenders>
	<loggers>
		<root level="debug">
			<appender-ref ref="Console" />
			<appender-ref ref="RollingFile" />
		</root>
	</loggers>
</configuration>